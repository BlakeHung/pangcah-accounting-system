AI_MAX_REQUESTS_PER_DAY=100

# 檔案上傳配置
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf

# 快取配置
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600